<!--index.wxml-->
<view class="">
    <!--搜索框-->
    <Searchinput></Searchinput>
    <!--轮播图-->
    <view class="index_swiper">
    <!--swiper和image都有各自的默认宽高-->
    <swiper autoplay indicator-dots circular>
        <swiper-item
            wx:for="{{swiperList}}"
            wx:key="rotate_id"
        >
            <navigator>
                <image mode="widthFix" src="{{item.image_src}}"/>
            </navigator>        
        </swiper-item>
    </swiper>
    </view>
</view>
