    <!--个人-->
    <block wx:elif="{{nav[2].isActive}}">
        <scroll-view scroll-y class="scroll">
            <view class="box box2">
                <!--信息-->
                <view class="info_box">
                    <view class=" title">姓名：</view>
                    <view><input placeholder="授权给的" /></view>
                </view>
                <view class="info_box">
                    <view class=" title">性别：</view>
                    <view><input placeholder="授权给的" /></view>
