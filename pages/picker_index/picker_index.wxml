<!--监听自定义事件-->
<Nav nav="{{nav}}" bindtoggle="toToggle">
    <!--首页-->
    <block wx:if="{{nav[0].isActive}}" class="block1">
        <scroll-view scroll-y class="scroll">
        <view class="top">欢迎回来，{{Atowp}}</view>
        <view class="order_content">
        <!--已接取-->
            <view class="block">
                <text class="title">已接取的订单</text>
                <!--循环-->
                <view class="order_box" 
                bindtap="getOrderList"
                wx:for="{{orderList}}"
                wx:for-item="item">
                    <!--一个订单-->
                    <view class="order d1 dd" wx:if="{{item.status == '1'}}">
                        <view data-index="1" catchtap='panel'>
                        <view>
                            <text>订单类型</text>
                            {{item.type}}
                        </view>
                        <view>
                            <text>重量</text>
                            {{item.weight}}kg
                        </view>
                        <view>
                            <text>预约时间</text>
                            {{item.time}}
                        </view>
                        <!--展开折叠分割线-->
                        <view  wx:if="{{showIndex == 1}}" data-index="0">
                            <view wx: if="{{item.detail}} !== ''">
                                <view>
                                    <text>详细内容</text>
                                    {{item.detail}}
                                </view>
                            </view>
                            <view>
                                <text>联系人</text>
                                {{item.contact}}
                            </view>
                            <view>
                                <text>电话</text>
                                {{item.phone}}
                            </view>
                            <view>
                                <text>详细地址</text>
                                {{item.address}}
                            </view>
                            <view>
                                <text>订单状态</text>
                                {{statusDict[item.status]}}
                            </view>
                            <view>
                                <text>备注</text>
                                {{item.remark}}
                            </view>
                            <view class="button_box" 
                            catchtap="finish" data-item="{{item}}">
                                <view class="button">确认订单完成</view>
                            </view>
                        </view>
                    <!--分割线-->
                        </view>
                    </view>
                </view>
            </view>
        <!--未接取-->
            <view class="block">
                <text class="title">可接取的订单</text>
                <checkbox-group bindchange="checkboxChange">
                    <label class="checkbox" wx:for="{{items}}">
                        <checkbox value="{{item.name}}" checked="{{item.checked}}" color="#fbd22c"/>{{item.value}}
                    </label>
                </checkbox-group>
                <!--循环1-->
                <view class="order_box" 
                bindtap="getOrderList" 
                wx:for="{{orderList}}"
                wx:for-item="item">
                    <!--一个订单-->
                    <view class="order d1"
                    wx:if="{{item.status == '0'}}"
                    >
                        <view data-index="2"
                        catchtap='panel'
                        >
                        <view>
                            <text>订单类型</text>
                            {{item.type}}
                        </view>
                        <view>
                            <text>重量</text>
                            {{item.weight}}kg
                        </view>
                        <view>
                            <text>预约时间</text>
                            {{item.time}}
                        </view>
                        <view>
                            <text>日期</text>
                            {{item.date}}
                        </view>
                        <view wx:if="{{showIndex == 2}}"  data-index="0">
                            <view>
                                <text>联系人</text>
                                {{item.contact}}
                            </view>
                            <view>
                                <text>电话</text>
                                {{item.phone}}
                            </view>
                            <view>
                                <text>详细地址</text>
                                {{item.address}}
                            </view>
                            <view>
                                <text>订单状态</text>
                            {{statusDict[item.status]}}
                            </view>
                            <view>
                                <text>备注</text>
                                {{item.remark}}
                            </view>
                    <!--只有失败的订单可以删除-->
                            <view wx: if="{{item.status == 0}}">
                                <view class="button_box" catchtap="access">
                                    <view class="button">接取订单</view>
                                </view>
                            </view>
                        </view>
                    </view>
                    </view>
                </view>
            </view>
        </view>
        </scroll-view>
    </block>
