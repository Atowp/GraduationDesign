<!--pages/order/index.wxml-->
<view class="">
    <!--订单-->
    <view class="order_content">
        <!--进行中的订单-->
        <view class="block">
            <text class="title">进行中的订单</text>
            <!--循环-->
            <view class="order_box"
            bindtap="getOrderList" 
            wx:for="{{orderList}}"
            wx:for-item="item">
                <!--一个订单-->
                <view class="order dd" wx:if="{{item.status == 0 || item.status == 1}}">
                <view
                data-index="1"
                catchtap='panel'>
                    <view>
                        <text>订单类型</text>
                        {{item.type}}
                    </view>
                
                    <!--折叠展开分割线-->
                <view wx:if="{{showIndex == 1}}" data-index="0">
                    <view>
                        <text>订单状态</text>
                        {{statusDict[item.status]}}
                    </view>
                </view>
                </view>
                </view>
            </view>
        </view>
        <!--历史订单-->
        <view class="block">
            <view class="title_box">
            <text class="title">历史订单</text>
            </view>
            <!--循环-->
            <view class="order_box" 
            bindtap="getOrderList"
            wx:for="{{orderList}}"
            wx:for-item="item">
                <!--一个订单-->
                <view wx:if="{{item.status == 2 || item.status == '-1'}}">
                <view class="order d1"
                >
                    <view data-index="2"
                    catchtap='panel'
                    >
                    <view>
                        <text>订单类型</text>
                        {{item.type}}
                    </view>
                    </view>
                    <view class="unfold" wx:if="{{showIndex == 2}}" 
                    data-index="0" catchtap='panel'>
                    <view>
                        <text>订单状态</text>
                        {{statusDict[item.status]}}
                    </view>
                    </view>
                </view>
                </view>
            </view>
        </view>
        <!--历史部分-->
    </view>
</view>
